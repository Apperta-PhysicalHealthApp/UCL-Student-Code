<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <resource-ref>
        <res-ref-name>datasource</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    
    <listener>
        <listener-class>com.metabolic_app.server.Init</listener-class>
    </listener>







    <servlet>
        <servlet-name>login-servlet</servlet-name>
        <servlet-class>com.metabolic_app.server.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login-servlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout-servlet</servlet-name>
        <servlet-class>com.metabolic_app.server.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout-servlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>main-page-servlet</servlet-name>
        <servlet-class>com.metabolic_app.server.servlets.MainPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>main-page-servlet</servlet-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/home</url-pattern>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>create-account-servlet</servlet-name>
        <servlet-class>com.metabolic_app.server.servlets.CreateAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>create-account-servlet</servlet-name>
        <url-pattern>/createaccount</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>get-authorized-patients-servlet</servlet-name>
        <servlet-class>com.metabolic_app.server.servlets.GetAuthorizedPatientsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>get-authorized-patients-servlet</servlet-name>
        <url-pattern>/getpatients</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>view-individual-patient-servlet</servlet-name>
        <servlet-class>com.metabolic_app.server.servlets.ViewIndividualPatientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>view-individual-patient-servlet</servlet-name>
        <url-pattern>/patient/view</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>view-patient-test-results</servlet-name>
        <servlet-class>com.metabolic_app.server.servlets.ViewTestResultsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>view-patient-test-results</servlet-name>
        <url-pattern>/patient/view_trends</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add-test-results</servlet-name>
        <servlet-class>com.metabolic_app.server.servlets.AddTestResultServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add-test-results</servlet-name>
        <url-pattern>/patient/input_test_results</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>view-clinician-inbox</servlet-name>
        <servlet-class>com.metabolic_app.server.servlets.ViewClinicianInboxServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>view-clinician-inbox</servlet-name>
        <url-pattern>/viewInbox</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>view-inbox-entry-servlet</servlet-name>
        <servlet-class>com.metabolic_app.server.servlets.ViewEntryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>view-inbox-entry-servlet</servlet-name>
        <url-pattern>/patient/view-inbox-submission</url-pattern>
        <url-pattern>/view-inbox-request</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>image-server-servlet</servlet-name>
        <servlet-class>com.metabolic_app.server.servlets.ImageSourceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>image-server-servlet</servlet-name>
        <url-pattern>/patient/image/*</url-pattern>
    </servlet-mapping>


    <security-constraint>
        <web-resource-collection>
            <web-resource-name>com.metabolic_app.server</web-resource-name>
            <url-pattern>/patient/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>com.metabolic_app</web-resource-name>
            <url-pattern>/login</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <filter>
        <filter-name>require-login-security-filter</filter-name>
        <filter-class>com.metabolic_app.security.LoginSecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>require-login-security-filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>require-authority-security-filter</filter-name>
        <filter-class>com.metabolic_app.security.ClinicianAuthorizedFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>require-authority-security-filter</filter-name>
        <url-pattern>/patient/*</url-pattern>
    </filter-mapping>

</web-app>